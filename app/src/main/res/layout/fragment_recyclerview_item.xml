<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height">

    <CheckBox
        android:id="@+id/cbContent"
        android:layout_width="@dimen/menu_item_checbox_width"
        android:layout_height="@dimen/menu_item_height"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/frg_recycler_checkbox_marginleft"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal|center_vertical"
        />
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:text="abc"
        android:layout_marginLeft="30dp"
        android:textSize="@dimen/menu_item_checkbox_textSize"
        android:paddingLeft="@dimen/frg_recycler_textview_marginleft"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/imgHandle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menu_item_height"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/reorder" />

</FrameLayout>