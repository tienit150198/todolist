<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_height_drawer_item">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nav_height_drawer_item"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/nav_item_icon_marginleft"
        android:src="@drawable/sublist" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height_drawer_item"
        android:layout_marginLeft="@dimen/nav_item_text_marginleft"
        android:layout_toRightOf="@id/imgIcon"
        android:gravity="center_vertical"
        android:text="@string/text_demo"
        android:textSize="@dimen/nav_item_text_size"
        android:textStyle="bold" />
</RelativeLayout>